<!--components/EditableImage/index.wxml-->
<div class="container" style="width: {{size.width}}px; height: {{size.height}}px; left: {{offset.x}}px; top: {{offset.y}}px; transform: rotateZ({{angle}}deg);">
  <image
    class="image"
    src="{{src}}"
    style="width: {{size.width}}px; height: {{size.height}}px;"
    bindload="onImageLoad"
    ontouchstart="onTouchStart"
    ontouchmove="onTouchMove"
    ontouchend="onTouchEnd"
    data-type="image"
  />
  <div
    class="resize nw"
    data-type="resize-nw"
    ontouchstart="onTouchStart"
    ontouchmove="onTouchMove"
    ontouchend="onTouchEnd"
  />
  <div
    class="resize ne"
    data-type="resize-ne"
    ontouchstart="onTouchStart"
    ontouchmove="onTouchMove"
    ontouchend="onTouchEnd"
  />
  <div
    class="resize sw"
    data-type="resize-sw"
    ontouchstart="onTouchStart"
    ontouchmove="onTouchMove"
    ontouchend="onTouchEnd"
  />
  <div
    class="resize se"
    data-type="resize-se"
    ontouchstart="onTouchStart"
    ontouchmove="onTouchMove"
    ontouchend="onTouchEnd"
  />
</div>
