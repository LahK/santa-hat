  <Snow />
  <view class="editor ">
    <image class="avatar" src="{{userInfo.avatarUrl}}" bindload="onImageLoad" />
    <EditableImage wx:for="{{hats}}" wx:for-item="number" src="../../assets/hat/{{number}}.png"/>
  </view>
  <div>
    <view class="button auth-button" bindtap=""> 保存 </view>
  </div>
  <div class="picker">
    <text>选择你的圣诞小帽：</text>
    <div class="list">
      <div class="item" wx:for="{{availableHats}}" wx:for-item="number" wx:key="index" bindtap="onTapItem" data-number="{{number}}">
        <image src="../../assets/hat/{{number}}.png" />
      </div>
    </div>
  </div>
