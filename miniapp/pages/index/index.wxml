<!--index.wxml-->
<view class="container">
  <Snow />
  <Snowflakes class="snow-front"/>

  <div class="logo-container">
      <div class="logo">
          <div class="logo-hat"></div>
      </div>
  </div>

  <div class="main-container">
    <div class="scene">
        <div class="land"></div>
        <div class="tree"></div>
        <div class="santa-claus"></div>
        <div class="snowman"></div>
    </div>

    <div class="warpper">
        <div class="auth-button-container">
            <button wx:if="{{!authed}}" class="button auth-button {{checkingAuth ? 'disabled' : ''}}" disabled="{{authed === undefined}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 授权获取头像昵称 </button>
            <view wx:else class="button auth-button" bindtap="navigateToEditor"> 获取圣诞小帽 </view>
        </div>

        <text class="title">“My idea of Christmas, whether old-fashioned or modern, is very simple: loving others.”</text>
    </div>
  </div>

  <div class="footer">Copyright @ LahK 2018</div>

</view>
