/**index.wxss**/
.container {
  background-color:#BEDBFF;
  /* background-color: #D9EBFF; */
  width: 100vw;
  height: 100vh;
}

.auth-button-container {
  position: absolute;
  bottom: 90px;

  transition: all 1s ease-in-out;
}

.auth-button:hover:not(.disabled) + .santa-hat {
  transform: translateY(-7px) rotateZ(30deg);
}

/* canvas */
canvas, .canvas {
  width: 60vw;
  height: 60vw;
  margin: 20vw;
}
.canvas {
  position: relative;
  overflow: hidden;
}
.avatar {
  width: 100%;
  height: 100%;
}

.copyright {
  position: absolute;
  bottom: 0;
  margin: 2em 0;

  color: black;
  text-align: center;
  font-size: 8px;
  letter-spacing: 1px;

  transition: all 1s ease-in-out;
}

.logo {
  position: absolute;
  width: 80vw;
  height: 22vw;
  top: 10vh;
  left: 13vw;
  
  transition: all 1s ease-in-out;
}

.scene {
  position: absolute;
  bottom: 0;
  background: #fff;
  height: 20vh;
  width: 100vw;
  
  transition: all 1s ease-in-out;
}

.scene .land {
  position: absolute;
  top: -80px;
  left: -10vw;
  width: 120vw;
  height: 80px;
  display: block;
  background: #fff;
  border-radius: 50% / 100% 100% 0 0;

  transition: all 1s ease-in-out;
}

.santa-deer {
  position: absolute;
  bottom: 25vh;
  width: 50vw;
  height: 40.4vw;
  z-index: 99;

  transition: all 1s ease-in-out;
}

.navigating .logo {
  top: calc(-22vw - 31px);
}
.navigating .santa-deer {
  bottom: calc(-40.4vw - 31px);
}
.navigating .scene {
  bottom: -51vh;
}
.navigating .scene .land {
  top: -31px;
}
.navigating .auth-button-container {
  bottom: -83px;
}
.navigating .copyright {
  bottom: -31px;
}

.button {
  box-shadow: 0px 8px 15px rgba(190, 219, 255, 0.3);
}