/**index.wxss**/
.container {
  background-color:#BEDBFF;
  /* background-color: #D9EBFF; */
  width: 100vw;
  height: 100vh;
}

.auth-button-container {
  position: absolute;
  bottom: 90px;
}

.santa-hat {
  position: absolute;
  top: -18px;
  right: -10px;
  width: 30px;
  height: 30px;
  transform: rotateZ(30deg);
  transition: all 0.3s ease 0s;
}

.auth-button:hover:not(.disabled) + .santa-hat {
  transform: translateY(-7px) rotateZ(30deg);
}

/* canvas */
canvas, .canvas {
  width: 60vw;
  height: 60vw;
  margin: 20vw;
}
.canvas {
  position: relative;
  overflow: hidden;
}
.avatar {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  bottom: 0;
  margin: 2em 0;

  color: white;
  text-align: center;
  font-family: "Cursive Sans";
  font-size: 13px;
  /* letter-spacing: 2.5px; */
  text-shadow: rgba(0, 0, 0, 0.1) 2px 2px;
}
